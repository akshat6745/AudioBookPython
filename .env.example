# Required environment variables
SHEET_ID=your_google_doc_id_here

# Optional environment variables (defaults shown)
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
DEFAULT_VOICE=en-US-ChristopherNeural

# Supabase (legacy — keep during migration, remove after)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_or_service_role_key_here

# ── Cloudflare (new architecture) ─────────────────────────
# Get Account ID: Cloudflare Dashboard → sidebar
CF_ACCOUNT_ID=your_cloudflare_account_id

# Get API Token: Dashboard → My Profile → API Tokens → Create Token
# Permissions needed: D1 Edit + R2 Storage Edit
CF_API_TOKEN=your_cloudflare_api_token

# Get D1 Database ID: Dashboard → Workers & Pages → D1 → your database
D1_DATABASE_ID=your_d1_database_id

# Get R2 keys: Dashboard → R2 → Manage R2 API Tokens (S3-compatible keys)
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=audiobookpython
# Format: https://<CF_ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com

# Upload Verification
VERIFY_UPLOADS=True  # Set to False to disable automatic content verification after upload
